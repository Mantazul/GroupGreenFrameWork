<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Target API Automation Script " parallel="true">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="69.0"/>
    <parameter name="url" value="https://www.target.com/"/>

    <test name = "Target site test">
        <classes>
            <class name="testHomePageTarget.ShoppingCartTest"/>
            <class name="testHomePageTarget.TargetHomePageTest"/>
            <class name="testHomePageTarget.TargetLoginTest"/>
            <class name="testHomePageTarget.TestGoogleSheetPage"/>
        </classes>
    </test>

</suite>