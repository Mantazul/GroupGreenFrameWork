<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Amazon API Automation Script " parallel="true">

    <parameter name="useCloudEnv" value="false"/>
    <parameter name="cloudEnvName" value="browserstack"/>
    <parameter name="os" value="OS X"/>
    <parameter name="os_version" value="Sierra"/>
    <parameter name="browserName" value="chrome"/>
    <parameter name="browserVersion" value="69.0"/>
    <parameter name="url" value="https://www.bankofamerica.com/"/>

    <test name = "BankofAmerica site test">
        <classes>
            <class name="testHome.TestHome"/>
            <class name="testHome.TestLogIn"/>
            <class name="testHome.TestDropDown"/>
            <class name="testHome.SearchTest"/>
            <class name="testHome.TestGoogleSheetPage"/>
        </classes>
    </test>

</suite>